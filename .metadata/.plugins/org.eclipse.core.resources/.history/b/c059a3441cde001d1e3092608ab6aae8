import java.util.Scanner;

public class LoopWhileSentinela {
	
	public void loopWhile() {
	
		
		String sentinela = "";
		
		Scanner objScanner = new Scanner (System.in);
		
		int contador1 = 0;
		
		while (contador1 >=0) {
				
			System.out.println("O VALOR DO CONTADOR DO LOOP WHILE É " + contador1);
			contador1++;
		
		while (!sentinela.equalsIgnoreCase("prego")) {
			
			
			System.out.println("DIGITE UM VALOR: ");
			sentinela = objScanner.next();
			System.out.println("VALOR DIGITADO: " + sentinela);
		}
		
		System.out.println("OBRIGADO POR USAR O PROGRAMA");
			
	}

	}
}
